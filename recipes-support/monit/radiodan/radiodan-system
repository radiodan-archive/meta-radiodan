check file updater_status with path /opt/radiodan/updates/status.json
  if timestamp > 1 minute then exec "/usr/sbin/radiodan-updater check --target=/opt/radiodan/apps --workspace=/opt/radiodan/updates"

check process radiodan-cease with pidfile /var/run/radiodan/radiodan-cease.pid
  start program = "/etc/init.d/radiodan-cease start"
  stop program = "/etc/init.d/radiodan-cease stop"
